#!/usr/bin/env bash
# WANT_JSON

exec 4>&1

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"

  local pth_log="$(mktemp -t XXXXXX)"
  pth_log='/tmp/meh.log'
  #trap "rm -f $pth_log" EXIT
  exec 1>&2 2>>"$pth_log"
  set -exfu

  if [[ "$#" -gt 0 ]]; then 
    eval $(cat "$1" | jq -r 'to_entries | map(select(.value | type == "string")) | map("\(.key)=" + @sh "\(.value)") | .[]')
    shift
  fi

  cd "$BLOCK_PATH"
  local nm_workarea="${as:-${repo##*/}}"
  if [[ ! -d "${nm_workarea}" ]]; then
    git clone "$repo" "${nm_workarea}"
  else
    cd "${nm_workarea}"
    git pull
  fi

  exec 1>&4
  jq -n -c -M \
    --arg log "$(cat "$pth_log")" \
    --arg head "$(git rev-parse HEAD)" \
    --arg branch "$(git rev-parse --abbrev-ref HEAD)" \
  '{
    changed: true, 
    head: "\($head)",
    branch: "\($branch)",
    log: "\($log)"
  }'
}

main "$@"
